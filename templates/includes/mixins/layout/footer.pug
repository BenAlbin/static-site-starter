mixin footer
  footer#footer
    if (theme.sidebar === 'bottom')
      include sidebar.pug
    .outer
      #footer-info.inner
        | &copy; #{date(new Date(), 'YYYY')} #{config.author || config.title}
        br
        | #{__('powered_by')} 
        a(href="http://hexo.io/" target="_blank") Hexo